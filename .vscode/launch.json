{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python:xm",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "HERMES_HOME": "/root/data/workspace/xm",
                "xm_HOME": "/root/data/workspace/xm"
            },
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "/data/env/miniconda3/envs/env_py39_dev/bin/python",
            "args": [
                "6000"
            ]
        },
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "env": {
                "HERMES_HOME": "/root/data/workspace/xm",
                "xm_HOME": "/root/data/workspace/xm"
            },
            "justMyCode": false,
            "python": "/data/env/miniconda3/envs/env_py39_dev/bin/python",
            "args": [
                "-s"
            ]
        }
    ]
}